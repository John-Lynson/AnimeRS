<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnimeRS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AnimeRS.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-dark text-white">
        <div class="container">
            <a class="navbar-brand" href="/"><img src="path_to_logo.png" id="logo" alt="AnimeRS Logo" /></a>
            <input type="search" class="form-control" id="searchBar" placeholder="Zoek animes..." />
            <nav class="navbar navbar-expand-md">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a class="nav-link text-white" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/Genres">Genres</a></li>
                    <!-- Andere links -->
                </ul>
            </nav>
            <a class="btn btn-primary" href="/Login">Inloggen/Registreren</a>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - AnimeRS - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
