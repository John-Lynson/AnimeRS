@model IEnumerable<AnimeRS.Core.Models.Anime>

<h1>Anime List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Genre</th>
            <th>Release Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var anime in Model)
        {
            <tr>
                <td>@anime.Title</td>
                <td>@anime.Description</td>
                <td>@anime.Genre</td>
                <td>@anime.ReleaseDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
